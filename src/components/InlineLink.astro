---
import type { HTMLAttributes } from "astro/types"
import { cn } from "@/utils"

export interface Props extends HTMLAttributes<"a"> {}

const { class: className, target = "_blank", ...attrs } = Astro.props
---

<a
  class={cn(
    "underline-offset-2 hover:underline",
    className
  )}
  target={target}
  {...attrs}
>
  <slot />
</a>
