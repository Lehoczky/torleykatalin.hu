---
import type { HTMLAttributes } from "astro/types"
import { cn } from "@/utils"

export interface Props extends HTMLAttributes<"a"> {}

const { class: className, target = "_blank", ...attrs } = Astro.props
---

<a
  class={cn(
    "text-white bg-primary py-4 px-8 leading-none text-center inline-flex shadow-md transition-colors duration-200 hover:bg-primary-hover",
    className,
  )}
  target={target}
  {...attrs}
>
  <slot />
</a>
