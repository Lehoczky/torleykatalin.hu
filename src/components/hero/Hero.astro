---
import ButtonLink from "@/components/ButtonLink.astro"
import IconFacebook from "@/components/icons/Facebook.astro"
import IconInstagram from "@/components/icons/Instagram.astro"
import IconTanitanek from "@/components/icons/Tanitanek.astro"
import IconTikTok from "@/components/icons/TikTok.astro"
import bgHero from "@/images/bg-hero.png"
import mkkpEpLogo from "@/images/mkkp-ep-logo.png"
---

<section class="relative text-white">
  <div class="container absolute bottom-24 left-0 right-0">
    <div class="w-1/3">
      <h1
        class="mb-12 rotate-hero-text transform text-8xl font-bold uppercase italic"
      >
        Törley Katalin
      </h1>

      <div
        class="mb-14 rotate-hero-text transform text-2xl font-semibold italic"
      >
        A Tanítanék Mozgalom és a Magyar Kétfarkú Kutyapárt közös európai
        parlamenti képviselőjelöltje
      </div>

      <ButtonLink
        href="https://actionnetwork.org/forms/csatlakozz-a-torley-kampanyhoz-5/"
      >
        Csatlakozz a kampányhoz!
      </ButtonLink>
    </div>
  </div>

  <div class="absolute right-14 top-5 flex gap-7">
    <a
      href="https://www.facebook.com/torley.kata/"
      class="transition duration-200 hover:scale-105"
      aria-label="Facebook"
    >
      <IconFacebook class="size-16" />
    </a>
    <a
      href="https://www.tiktok.com/@trley.kata?_t=8jcwuqQpQg4&_r=1"
      class="transition duration-200 hover:scale-105"
      aria-label="TikTok"
    >
      <IconTikTok class="size-16" />
    </a>
    <a
      href="https://www.instagram.com/torley.kata/"
      class="transition duration-200 hover:scale-105"
      aria-label="Instagram"
    >
      <IconInstagram class="size-16" />
    </a>
  </div>

  <div class="absolute bottom-5 right-14 flex gap-6">
    <img src={mkkpEpLogo.src} alt="MKKP Logo" class="size-20" />
    <IconTanitanek class="size-20" />
  </div>

  <div class="relative -z-10">
    <img
      src={bgHero.src}
      class="w-full object-cover"
      style={{ maxHeight: bgHero.height + "px" }}
      alt=""
    />
    <div class="hero-gradient absolute inset-0 w-1/2"></div>
  </div>
</section>

<style>
  h1 {
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  .hero-gradient {
    background: linear-gradient(
      92.54deg,
      rgba(0, 0, 0, 0.45) 46.26%,
      rgba(113, 113, 113, 0.24975) 80.32%,
      rgba(255, 255, 255, 0) 98.06%
    );
  }
</style>
